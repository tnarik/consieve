{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "indent": ["error", 3],
      "eol-last": ["error", "never"],
      "spaced-comment": ["error", "never", {
        "line": { "exceptions": ["-"] }
      }],
      "quotes": ["error", "double"],
      "func-names": ["error", "as-needed"]
    }
}